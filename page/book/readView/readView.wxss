.title {
  font-size: 16px;
  font-weight: bold;
}

.control {
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: row;
  width: 100%;
  flex-wrap: nowrap;
  text-align: center;
  justify-content: center;
  margin-top: 10px;
  margin-bottom: 10px;
}

.container {
  margin-bottom: 10px;
  height: 100%;
}

.night_style {
  color: #eee;
  background: #111;
  opacity: 0.8;
}

.content {
  size: 14px;
  margin: 5px;
  white-space: pre-wrap;
  word-break: break-all;
}

.next {
  border-radius: 0px;
  border-top-right-radius: 50px;
  border-bottom-right-radius: 50px;
}

.pre {
  border-radius: 0px;
  border-top-left-radius: 50px;
  border-bottom-left-radius: 50px;
}

.button {
  /* margin: 5px 10px 5px 10px; */
  margin-left: 5px;
  padding-top: 5px;
  color: #ff8719;
  height: 30px;
  width: 80px;
  border: 1px #ff8719 double;
}

.button:active {
  background-color: #eee;
  opacity: 0.8;
}

.top {
  color: #84868f;
  margin-left: 10px;
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: row;
}

.color_title {
  color: #ff8719;
}

.show_top {
  color: white;
  width: 100%;
  background-color: #2c2c30;
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: row;
  position: fixed;
  left: 0px;
  top: -80px;
}

.back_bt {
  padding: 2px 5px;
  background-color: #ccc;
  border-radius: 5px;
  margin-top: 5px;
  margin-left: 10px;
  margin-bottom: 5px;
}

.back_bt:active {
  background: #bbb;
}

.book_list_bt {
  padding: 2px 5px;
  background-color: #ccc;
  border-radius: 5px;
  width: 50%;
  margin-top: 5px;
  text-align: center;
  margin-left: 10px;
  margin-bottom: 5px;
}

.book_list_bt:active {
  background: #bbb;
}

.show_bottom {
  color: white;
  width: 100%;
  background-color: #2c2c30;
  position: fixed;
  bottom: -100px;
  left: 0px;
  height: 100px;
}

.chapter_control {
  width: 100%;
}

.next_chapter {
  margin: 5px;
  border-radius: 2px;
  background: #ccc;
  size: 8px;
  text-align: center;
  width: 80px;
  height: 25px;
  float: right;
}

.next_chapter:active {
  background: #bbb;
}

.right_jt {
  border: 8px solid transparent;
  border-left: 10px solid #fff;
  float: right;
  margin-top: 3px;
  width: 0;
  height: 0;
}

.pre_chapter {
  margin: 5px;
  border-radius: 2px;
  background: #ccc;
  size: 8px;
  text-align: center;
  width: 80px;
  height: 25px;
  float: left;
}

.pre_chapter:active {
  background: #bbb;
}

.left_jt {
  border: 8px solid transparent;
  border-right: 10px solid #fff;
  float: left;
  margin-top: 3px;
  width: 0;
  height: 0;
}

.no_data {
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: row;
  width: 100%;
  flex-wrap: nowrap;
  text-align: center;
  justify-content: center;
  position: fixed;
  z-index: -1;
  bottom: 10px;
}

.full {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: -2;
}

.setting {
  width: 100%;
  background: #fff;
  position: fixed;
}

.setting_item {
  width: 110rpx;
  padding-top: 20rpx;
  text-align: center;
  height: 80rpx;
  border-radius: 10rpx;
  background: #ccc;
  color: white;
  position: fixed;
  margin-top: 43px;
}

.setting_item:active {
  background: #eee;
}

.font_size_sub {
  margin-left: 20rpx;
}

.font_size_add {
  margin-left: 140rpx;
}

.night {
  margin-left: 260rpx;
}

.book_store {
  margin-left: 380rpx;
}

.store {
  margin-left: 500rpx;
}

.list {
  margin-left: 620rpx;
}

.page {
  width: 100%;
  height: 100%;
}
