.mygrid {
  float: left;
  width: 22%;
  position: relative;
  padding-top: 30%;
  margin-left: 3%;
  box-shadow: 5px 5px 7px rgba(22, 22, 22, 0.5);
}

.mygrid:active {
  background-color: #ececec;
}

.myipic {
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  overflow: hidden;
}

.myipic image {
  display: block;
  width: 100%;
  height: 100%;
}

.title {
  position: absolute;
  width: 100%;
  margin-top: 5px;
  text-align: center;
  color: #000;
  font-size: 12px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.recommend {
   margin-bottom: 150px; 
}

.line2 {
  clear: both;
  height: 100px;
}