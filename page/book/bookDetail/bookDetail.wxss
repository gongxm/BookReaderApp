/* bookDetail.wxss */
.button {
  border: 1px #ececec double;
  width: 40%;
  padding: 5px;
  text-align: center;
  font-family: '微软雅黑';
  margin-left: 10px;
  margin-right: 10px;
  border-radius: 30px;
}

.button_box {
  margin-top: 0px;
  padding-top: 10px;
  padding-bottom: 15px;
  display: flex;
  border-bottom: 0.5px solid #e5e5e5;
}
.button-green {
  color: #0bb20c;
}

.button-gray {
  color: #888;
}

.button-red {
  color: #f00;
}

.font-14-size {
  font-size: 14px;
}

.book-title {
  display: block;
  font-weight: bold;
  text-align: left;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 10px;
}

.book-author {
  padding-left: 5px;
}

.color-author {
  color: #6495ed;
}

.author-img {
  width: 24px;
  height: 24px;
  position: relative;
  float: left;
}

.author-view {
  padding-top: 10px;
  width: 100%;
  line-height: 24px;
  vertical-align: middle;
}

.author-text {
  width: 100%;
  height: 24px;
}

.book-shortIntroduce {
  padding-left: 5px;
  font-size: 13px;
  padding-bottom: 15px;
  border-bottom: 0.5px solid #e5e5e5;
}

.book-cover {
  width: 120px;
  height: 150px;
}

.book-font-item {
  font-size: 13px;
}

.book-color-item {
  color: #666;
}

.book-red-item {
  color: red;
}

.container {
  flex-wrap: wrap;
  flex-direction: column;
  display: flex;
  padding: 10px;
}



.grid {
  /* 上右下左 */
  margin: 5px;
  border: 1px #ececec double;
  position: relative;
  float: left;
  width: 130px;
  padding: 0px;
  text-align: center;
}

.book-info-box {
  flex-wrap: wrap;
  width: 100%;
  padding-bottom: 10px;
}

.short-info {
  flex-wrap: wrap;
  width: 100%;
  padding-top: 10px;
}

