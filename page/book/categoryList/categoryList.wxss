/* categoryList.wxss */

.weiui-list {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
}

.tips {
  color: red;
  size: 16px;
}

.center {
  text-align: center;
}

.category-name {
  color: blue;
  size: 16px;
  font-weight: bold;
}

.book-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.navigator-hover {
  background-color: #ececec;
}

.book-info {
  flex-wrap: wrap;
  flex-direction: column;
  display: flex;
}

.fm-image {
  width: 120px;
  height: 150px;
  margin-right: 0.8em;
  line-height: 60px;
  text-align: center;
}

.book-title-box {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  min-width: 0px;
}

.book-title {
  font-weight: bold;
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
  width: 560rpx;
}

.book-author {
  font-size: 14px;
}

.last_chapter {
  color: #888;
  width: 560rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.buttom-tips {
  font-size: 12px;
  color: #888;
}
