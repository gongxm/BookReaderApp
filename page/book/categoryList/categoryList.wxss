/* categoryList.wxss */

.weiui-list {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
}

.tips {
    color: red;
    size: 16px;
}

.center {
    text-align: center;
}

.category-name {
    color: blue;
    size: 16px;
    font-weight: bold;
}

.book-item {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}

.navigator-hover {
    background-color: #ececec;
}

.book-info {
    flex-wrap: wrap;
    flex-direction: column;
    display: flex;
}

.fm-image {
    width: 120px;
    height: 150px;
    margin-right: 0.8em;
    line-height: 60px;
    text-align: center;
}

.book-title-box {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    min-width: 0px;
}

.book-title {
    font-weight: 550;
    font-size: 17px;
    width: auto;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: normal;
    word-wrap: break-word;
    word-break: break-all;
}

.book-author {
    font-size: 14px;
    color: #888;
}

.buttom-tips {
    font-size: 12px;
    color: #888;
}
