<view wx:if="{{permissions=='USER'}}">

  <view class='loading' wx:if='{{loading}}'>
    <image src='../../images/loading.gif' mode='aspectFit'></image>
  </view>
  <view class="container" wx:else>
    <view>
      <input class='search' value='{{inputValue}}' placeholder='搜索: 输入书名或作者名' type='text' maxlength='30' confirm-type='search' confirm-hold='false' bindconfirm='search'></input>
    </view>
    <view class="weui-panel-bd" wx:if="{{thirdSession != ''}}">
      <view wx:if="{{categories.length==0}}">
        <view class="center gray-color tips-size">没有数据,请重试!</view>
      </view>
      <view wx:else>

        <view class="mygrid" bindtap='navigatoList' id='{{index}}' wx:for="{{categories}}" wx:key="name">
          <view class="button button-red" hover-class="weui-form-preview-btn-active" hover-stay-time="100">{{item.name}}</view>
        </view>

      </view>
    </view>

    <view wx:else>
      <view bindtap="openUserInfoSetting" class="weui-media-box weui-media-box-appmsg" hover-class="weui-cell-active">
        <view class="weui-media-box-hd weui-media-box-hd-in-appmsg">
          <image class="weui-media-box-thumb" src="../../images/plus.png" mode="aspectFill" />
        </view>
        <view class="weui-media-box-bd weui-media-box-bd-in-appmsg">
          <view class="weui-media-box-title">授权登录</view>
        </view>
      </view>
    </view>

  </view>
</view>
<view class='container' wx:else>
  <text>已完成事项:</text>
  <view class='history_container' wx:if='{{history.length>0}}'>
    <view class='history_item' wx:for='{{history}}' wx:key='*key'>
      <view>{{item.value}}</view>
      <image src='../../images/error.png' id='{{index}}' class='img' bindtap='delete'></image>
    </view>
    <view class='control'>
    <view class='ctl_bt' bindtap='clear'>清空历史</view>
    </view>
  </view>
</view>