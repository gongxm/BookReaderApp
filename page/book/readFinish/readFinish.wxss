.title {
  background: #d1cdc7;
  padding-top: 5px;
  padding-bottom: 5x;
  width: 100%;
  height: 25px;
}

.title_text {
  padding-left: 10px;
  float: left;
}

.more {
  position: absolute;
  right: 10px;
  border: 1px #ececec double;
  background: #d1cd00;
  border-radius: 3px;
  padding: 3px;
  line-height: 100%;
  vertical-align: middle;
}

.more:active{
  background: #888;
}

.container {
  margin-top: 20px;
}

.mygrid {
  /* 上右下左 */
  margin: 2px 2px 0px 6px;
  border: 1px #ececec double;
  position: relative;
  float: left;
  width: 30%;
  text-align: center;
  box-shadow: 5px 5px 7px rgba(22, 22, 22, 0.5);
}

.mygrid:active {
  background-color: #ececec;
}

.myipic {
  width: 100px;
  height: 120px;
  margin: 0 auto;
  margin-top: 5px;
}

.myipic image {
  display: block;
  width: 100%;
  height: 100%;
}

.book_title {
  display: block;
  text-align: center;
  font-weight: bold;
  color: #000;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.line1 {
  clear: both;
  height: 20px;
}

.line2 {
  clear: both;
  height: 50px;
}

.button_show {
  display: flex;
  width: 100%;
  position: fixed;
  bottom: 0px;
  left: 0px;
  height: 40px;
  background: white;

}

.bt1 {
  margin-top: 2px;
  width: 150px;
  height: 35px;
  line-height: 35px;
  vertical-align: middle;
  background: #928179;
  color: white;
  font-size: 12px;
}

.bt1:active{
  background: #beb0a9;
}