.mygrid {
  float: left;
  width: 29%;
  position: relative;
  padding-top: 40%;
  margin: 6% 0 2% 3%;
  border: 1px #ececec double;
  box-shadow: 5px 5px 7px rgba(22, 22, 22, 0.5);
}

.mygrid:active {
  background-color: #ececec;
}

.myipic {
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  overflow: hidden;
}

.image_cover {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}

.update {
  position: absolute;
  right: 0;
  width: 50px;
  height: 50px;
  z-index: 888;
}

.title {
  position: absolute;
  width: 100%;
  font-weight: bold;
  margin-top: 5px;
  text-align: center;
  color: #000;
  font-size: 12px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

